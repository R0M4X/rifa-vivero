    <script>
        // Configuraci√≥n
        const PRICE_PER_NUMBER = 500;
        const TOTAL_NUMBERS = 100;
        const MP_ALIAS = 'lasolitariavivero';

        // Estado de la aplicaci√≥n
        let selectedNumbers = [];
        let soldNumbers = JSON.parse(localStorage.getItem('soldNumbers') || '[]');

        // Inicializar la aplicaci√≥n
        function init() {
            createNumbersGrid();
            updateSelectionInfo();
        }

        // Crear la grilla de n√∫meros
        function createNumbersGrid() {
            const grid = document.getElementById('numbersGrid');
            grid.innerHTML = '';

            for (let i = 1; i <= TOTAL_NUMBERS; i++) {
                const button = document.createElement('button');
                button.className = 'number-btn';
                button.textContent = i.toString().padStart(2, '0');
                button.onclick = () => toggleNumber(i);

                if (soldNumbers.includes(i)) {
                    button.classList.add('sold');
                    button.disabled = true;
                }

                grid.appendChild(button);
            }
        }

        // Alternar selecci√≥n de n√∫mero
        function toggleNumber(number) {
            if (soldNumbers.includes(number)) return;

            const button = document.querySelector(`.number-btn:nth-child(${number})`);
            const index = selectedNumbers.indexOf(number);

            if (index > -1) {
                selectedNumbers.splice(index, 1);
                button.classList.remove('selected');
            } else {
                selectedNumbers.push(number);
                button.classList.add('selected');
            }

            updateSelectionInfo();
        }

        // Actualizar informaci√≥n de selecci√≥n
        function updateSelectionInfo() {
            const selectedNumbersEl = document.getElementById('selectedNumbers');
            const totalPriceEl = document.getElementById('totalPrice');
            const checkoutBtn = document.getElementById('checkoutBtn');

            if (selectedNumbers.length === 0) {
                selectedNumbersEl.textContent = 'Ninguno';
                totalPriceEl.textContent = '0';
                checkoutBtn.disabled = true;
            } else {
                selectedNumbers.sort((a, b) => a - b);
                selectedNumbersEl.textContent = selectedNumbers.map(n => n.toString().padStart(2, '0')).join(', ');
                totalPriceEl.textContent = (selectedNumbers.length * PRICE_PER_NUMBER).toLocaleString();
                checkoutBtn.disabled = false;
            }
        }

        // Proceder al pago
        function proceedToPayment() {
            if (selectedNumbers.length === 0) {
                alert('Por favor selecciona al menos un n√∫mero');
                return;
            }

            const total = selectedNumbers.length * PRICE_PER_NUMBER;
            const numbersText = selectedNumbers.map(n => n.toString().padStart(2, '0')).join(', ');
            
            // Crear mensaje para Mercado Pago
            const message = `Rifa Gran Invierno - Vivero La Solitaria
N√∫meros: ${numbersText}
Cantidad: ${selectedNumbers.length}
Total: $${total.toLocaleString()}`;

            // Marcar n√∫meros como vendidos
            soldNumbers = [...soldNumbers, ...selectedNumbers];
            localStorage.setItem('soldNumbers', JSON.stringify(soldNumbers));

            // Crear enlace de Mercado Pago
            const mpUrl = `https://www.mercadopago.com.ar/collect/checkout?alias=${MP_ALIAS}&amount=${total}&message=${encodeURIComponent(message)}`;
            
            // Abrir Mercado Pago en nueva ventana
            window.open(mpUrl, '_blank');

            // Limpiar selecci√≥n y actualizar vista
            selectedNumbers = [];
            createNumbersGrid();
            updateSelectionInfo();

            // Mostrar mensaje de confirmaci√≥n
            alert(`¬°Perfecto! Te redirigimos a Mercado Pago para completar tu compra.
            
N√∫meros seleccionados: ${numbersText}
Total: $${total.toLocaleString()}

¬°Gracias por participar en la Gran Rifa de Invierno! üåø`);
        }

        // Inicializar cuando se carga la p√°gina
        document.addEventListener('DOMContentLoaded', init);
    </script>
